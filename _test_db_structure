#############
### MYSQL ###
#############
CREATE DATABASE `imdb_test`;
USE `imdb_test`;
CREATE TABLE `films` (
	`ID` INT(10) NOT NULL AUTO_INCREMENT,
	`gid` VARCHAR(10) NULL DEFAULT NULL,
	`title` VARCHAR(50) NULL DEFAULT NULL,
	`directors` VARCHAR(150) NULL DEFAULT NULL,
	`actors` VARCHAR(150) NULL DEFAULT NULL,
	`year` INT(5) NULL DEFAULT NULL,
	`description` MEDIUMTEXT NULL,
	`genres` VARCHAR(50) NULL DEFAULT NULL,
	PRIMARY KEY (`ID`)
)
COLLATE='utf8_general_ci'
ENGINE=InnoDB
;
CREATE TABLE `actors` (
	`ID` INT(10) NOT NULL AUTO_INCREMENT,
	`actor_id` VARCHAR(50) NULL DEFAULT NULL,
	`actor_name` VARCHAR(50) NULL DEFAULT NULL,
	`url` MEDIUMTEXT NULL DEFAULT NULL,
	PRIMARY KEY (`ID`)
)
COLLATE='utf8_general_ci'
ENGINE=InnoDB
;
CREATE TABLE `directors` (
	`ID` INT(10) NOT NULL AUTO_INCREMENT,
	`director_id` VARCHAR(50) NULL DEFAULT NULL,
	`director_name` VARCHAR(50) NULL DEFAULT NULL,
	PRIMARY KEY (`ID`)
)
COLLATE='utf8_general_ci'
ENGINE=InnoDB
;
CREATE TABLE `stills` (
	`ID` INT(10) NOT NULL AUTO_INCREMENT,
	`gid` VARCHAR(10) NULL DEFAULT NULL,
	`url` MEDIUMTEXT NULL DEFAULT NULL,
	PRIMARY KEY (`ID`)
)
COLLATE='utf8_general_ci'
ENGINE=InnoDB
;
